<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_background"
    android:padding="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"

            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/bg_round_box_dark">

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textAppearance="@style/simple_label_bold"
                android:textSize="36sp"
                android:textColor="@color/yellow" />

            <View
                android:id="@+id/vector_1"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/v_line_white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/day_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="@style/simple_label_bold"
                    android:textSize="18sp"
                    android:text="@string/day"
                    android:textColor="@color/light_gray" />

                <TextView
                    android:id="@+id/month_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="@style/simple_label_bold"
                    android:textSize="18sp"
                    android:text="@string/month"
                    android:textColor="@color/light_gray" />

                <TextView
                    android:id="@+id/year_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="@style/simple_label_bold"
                    android:textSize="18sp"
                    android:text="@string/year"
                    android:textColor="@color/light_gray" />

            </LinearLayout>

            <TextView
                android:id="@+id/from_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="left"
                android:textAppearance="@style/simple_label_bold"
                android:textSize="18sp"
                android:text="@string/from_label"
                android:textColor="@color/light_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="2dp"
                android:background="@drawable/bg_round_box_light">

                <Spinner
                    android:id="@+id/day1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:backgroundTint="@color/yellow">
                </Spinner>

                <Spinner
                    android:id="@+id/month1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:backgroundTint="@color/yellow">
                </Spinner>

                <Spinner
                    android:id="@+id/year1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:backgroundTint="@color/yellow">
                </Spinner>

            </LinearLayout>

            <TextView
                android:id="@+id/to_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="left"
                android:textAppearance="@style/simple_label_bold"
                android:textSize="18sp"
                android:text="@string/to_label"
                android:textColor="@color/light_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="2dp"
                android:background="@drawable/bg_round_box_light">

                <Spinner
                    android:id="@+id/day2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:backgroundTint="@color/yellow">
                </Spinner>

                <Spinner
                    android:id="@+id/month2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:backgroundTint="@color/yellow">
                </Spinner>

                <Spinner
                    android:id="@+id/year2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:backgroundTint="@color/yellow">
                </Spinner>

            </LinearLayout>

            <Button
                android:id="@+id/show_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:background="@drawable/btn_simple"
                android:text="@string/show_statistics"
                android:textAppearance="@style/simple_button"
                android:textColor="@color/light_gray"
                app:backgroundTint="@null" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="10dp"
                android:padding="20dp"
                android:background="@drawable/bg_round_box_light">

                <TextView
                    android:id="@+id/biggest_expense_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/simple_label_bold"
                    android:textSize="18sp"
                    android:text="@string/biggest_expense_label"
                    android:textColor="@color/light_gray" />

                <TextView
                    android:id="@+id/biggest_expense_member_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/simple_label_bold"
                    android:textSize="18sp"
                    android:textColor="@color/light_gray" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="10dp"
                android:padding="20dp"
                android:background="@drawable/bg_round_box_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_round_box_light">

                    <TextView
                        android:id="@+id/all_expenses_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/simple_label_bold"
                        android:textSize="18sp"
                        android:text="@string/all_expenses_label"
                        android:textColor="@color/light_gray" />

                    <TextView
                        android:id="@+id/all_expense_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/simple_label_bold"
                        android:textSize="18sp"
                        android:textColor="@color/light_gray" />
                </LinearLayout>

                <View
                    android:id="@+id/vector_2"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/v_line_white" />

                <LinearLayout
                    android:id="@+id/stats_l"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <!-- DodaÄ‡ tutaj tabele kategoria: koszt PLN-->

                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/back_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/btn_simple"
                android:text="@string/back"
                android:textAppearance="@style/simple_button"
                android:textColor="@color/light_gray"
                app:backgroundTint="@null" />
        </LinearLayout>
</ScrollView>
